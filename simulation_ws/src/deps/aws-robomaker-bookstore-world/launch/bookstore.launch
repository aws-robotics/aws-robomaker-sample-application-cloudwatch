<launch>
  <!-- Always set GUI to false for AWS RoboMaker Simulation
       Use gui:=true on roslaunch command-line to run with a gui.
  -->
  <arg name="gui" default="false"/>
  <arg name="ign_args" default=""/>

  <include file="$(find ros_ign_gazebo)/launch/ign_gazebo.launch">
    <env name="IGN_GAZEBO_RESOURCE_PATH" value="$(find aws_robomaker_bookstore_world)/models/:$(find turtlebot3_description_reduced_mesh)" />
    <arg name="ign_args" value="$(arg ign_args) $(find aws_robomaker_bookstore_world)/worlds/bookstore.world"/>
  </include>

  <!-- rosrun ros_ign_bridge parameter_bridge /clock@rosgraph_msgs/Clock[ignition.msgs.Clock -->
  <node pkg="ros_ign_bridge" type="parameter_bridge" name="bridge"
    args="/clock@rosgraph_msgs/Clock[ignition.msgs.Clock /model/turtlebot3_waffle_pi_1/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_2/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_3/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_4/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_5/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_6/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_7/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_8/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_9/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist /model/turtlebot3_waffle_pi_10/cmd_vel@geometry_msgs/Twist]ignition.msgs.Twist" />
</launch>
